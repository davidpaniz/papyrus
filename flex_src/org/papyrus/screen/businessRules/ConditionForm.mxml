<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:enum="org.papyrus.components.combobox.enum.*">
	 	<mx:Script>
		<![CDATA[
	 			import org.papyrus.model.Condition;
	 			import mx.collections.ArrayCollection;
			[Bindable]
			private var _condition:Condition;
			
			public function get condition():Condition
			{
				var cond:Condition = new Condition();
				cond.expression1 = txtExpression1.text;
				cond.expression2 = txtExpression2.text;
				cond.comparisonOperator = (cbComparison.selectedItem as String);
				
				return cond;
			}
			
			public function set condition(con:Condition):void
			{
				this._condition = con;
			}
			
		]]>
	</mx:Script>
	<mx:VBox width="100%" >
		<mx:Form id="condForm" width="100%" height="100%" >
			<mx:FormItem label="ID:" width="127" visible="false" includeInLayout="false">
				<mx:TextInput id="txtId" text="{_condition.id}" editable="false" enabled="false" width="100%" />
			</mx:FormItem>
			<mx:FormItem label="{resourceManager.getString('businessRule', 'expression')}1:" width="345">
				<mx:TextInput id="txtExpression1" text="{_condition.expression1}" width="100%" />
			</mx:FormItem>
			<mx:FormItem label="{resourceManager.getString('businessRule', 'type')}:" width="345" >
				<enum:ComparisonOperatorComboBox id="cbComparison" selectedItem="{_condition.comparisonOperator}"/>
			</mx:FormItem>
			<mx:FormItem label="{resourceManager.getString('businessRule', 'expression')}2:" width="345">
				<mx:TextInput id="txtExpression2" text="{_condition.expression2}" width="100%" />
			</mx:FormItem>
		</mx:Form>
	</mx:VBox>

</mx:HBox>