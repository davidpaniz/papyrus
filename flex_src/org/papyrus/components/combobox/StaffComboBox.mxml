<?xml version="1.0" encoding="utf-8"?>
<DomainComboBox xmlns="org.papyrus.components.combobox.*" 
				xmlns:mx="http://www.adobe.com/2006/mxml"
				labelField="name"
				dataId="staff" serviceMethod="{new StaffService().listStaff}" entityClass="{Staff}"
				isRequired="true"
				>
	<mx:Script>
		<![CDATA[
			import org.papyrus.model.Staff;
			import org.papyrus.services.StaffService;
						
			public static function reset():void
			{
				observableMap.put("staff", null );
				refresh("staff");
			}
			
			override protected function callService():void
			{
	 			new StaffService().listStaff( handler );
			}
		]]>
	</mx:Script>
	
</DomainComboBox>