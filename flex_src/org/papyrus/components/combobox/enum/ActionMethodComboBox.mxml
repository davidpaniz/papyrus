<?xml version="1.0" encoding="utf-8"?>
<mx:ComboBox xmlns:mx="http://www.adobe.com/2006/mxml" creationComplete="init()" labelFunction="showI18NLabel">
	<mx:Script >
		<![CDATA[
			import mx.events.ListEvent;
			import mx.messaging.AbstractConsumer;
			import mx.collections.ArrayCollection;
			
			private var staticValues:ArrayCollection = new ArrayCollection();
			
			private function init():void {
				staticValues.addItem("CREATE");
				staticValues.addItem("UPDATE");
				staticValues.addItem("DELETE");
				
				dataProvider = staticValues;
			}
			
			private function showI18NLabel(item:Object):String {
				return resourceManager.getString('businessRule', item.toString());
			}
			
			override public function set selectedItem( param:Object ):void
			{
				super.selectedItem = 1;
				var count:int = 0;
				for each( var obj:Object in staticValues )
				{
					if( obj && obj == param )
					{
						selectedIndex = count;
						dispatchEvent( new ListEvent( ListEvent.CHANGE ) );
						return;
					}
					count++;
				}
	
				// It was not found
				super.selectedIndex = 0;
			}
			
		]]>
	</mx:Script>
		
	
</mx:ComboBox>
